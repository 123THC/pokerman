<div class="row profileTopBox">
  <div class="col-md-6 col-sm-12">
    <img class="profilePic" src="<%= user.imageSRC %>" alt="<%= user.username %>">
    <h1 class="profileUsername"><%= user.username %></h1>
  </div>
  <div class="col-md-6 col-sm-12 userDetailsBox">
    <h3><%= user.address.line2 %></h3>
    <h3 class="bottomAddress"><%= user.address.city %></h3>

    <% if( currentUser.id === user.id) { %>
        <a href="/users/<%= user.id %>/edit" class="btn loginBtn">Edit Account</a>
    <% } %>

    <% if( currentUser.id === user.id) { %>
        <form  class="deleteForm" method="POST" action="/users/<%= user.id %>">
          <input type="hidden" name="_method" value="DELETE">
          <button class="btn loginBtn">Delete Account</button>
        </form>
    <% } %>
  </div>
</div>

<% games.forEach((game) => { %>
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-block">
          <h1 class="card-title">Attending</h1>
          <p class="card-text"><strong>Buy in:</strong> £<%= game.buyIn %></p>
          <p class="card-text"><strong>Number of Players: </strong><%= game.players %></p>
          <p class="card-text"><strong>Seats remaining: </strong><%= game.seatsRemaining() %></p>
          <p class="card-text"><strong>When:</strong> <%= game.date.toDateString() %></p>
          <p class="card-text"><strong>Time:</strong> <%= game.time %></p>
          <a href="/games/<%= game.id %>" class="btn loginBtn">View Game</a>
        </div>
      </div>
    </div>
  <% }) %>
  <% hosting.forEach((game) => { %>
    <div class="col-md-6">
      <div class="card">
        <div class="card-block">
          <h1 class="card-title">Hosting</h1>
          <p class="card-text"><strong>Buy in:</strong> £<%= game.buyIn %></p>
          <p class="card-text"><strong>Number of Players: </strong><%= game.players %></p>
          <p class="card-text"><strong>Seats remaining: </strong><%= game.seatsRemaining() %></p>
          <p class="card-text"><strong>When:</strong> <%= game.date.toDateString() %></p>
          <p class="card-text"><strong>Time:</strong> <%= game.time %></p>
          <a href="/games/<%= game.id %>" class="btn loginBtn">View My Game</a>
        </div>
      </div>
    </div>
  </div>
<% }) %>
