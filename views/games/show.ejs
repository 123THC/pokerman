<div class="row">
  <div class="col-lg-12">
    <h2>Buy in: Â£<%= game.buyIn %></h2>
    <h2>Number of Players: <%= game.players %></h2>
    <h2>When: <%= game.date %></h2>
    <h2>Seats Remaining: <%= game.seatsRemaining() %></h2>
    <h2>More Info: <%= game.description %></h2>
  </div>
</div>

<% if(locals.isAuthenticated && game.seatsRemaining() > 0 && !game.userIsAttending(currentUser) && game.createdBy.toString() !== currentUser.id) { %>
  <form method="POST" action="/games/<%= game.id %>/attend">
    <input type="hidden" name="_method" value="<%= currentUser.username %>">
    <button class="button attend">Attend</button>
  </form>
<% } %>

<section id="location">
  <div class="row">
    <div class="col-lg-4 showMap">
      <div id="map" data-lat=<%= game.latitude %> data-lng=<%= game.longitude %>></div>
    </div>
  </div>
</section>

<section>
  <h4>Already Attending</h4>
  <% game.going.forEach((going) => { %>
    <a href="/users/<%= going.id %>"><%= going.username %></a>
  <% }) %>
</section>

<% if (locals.isAuthenticated ) { %>
  <section>
    <form method="POST" action="/games/<%= game.id %>/comments">
      <textarea name="content" id="content" placeholder="Ask any questions here"></textarea>
      <button class="button">Ask a Question</button>
    </form>
  </section>
<% } %>

<section>
  <h4>Previous Questions</h4>
  <% game.comments.forEach((comment) => { %>
    <p><%= comment.content %></p>
    <small><%= comment.createdBy.username %></small>

    <% if (locals.isAuthenticated && comment.ownedBy(currentUser)) { %>

    <form method="POST" action="/games/<%= game.id %>/comments/<%= comment.id %>">
      <input type="hidden" name="_method" value="DELETE">
      <button>Delete Comment</button>
    </form>
    <% } %>
  <% }) %>
</section>
