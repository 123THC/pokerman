<h1>Games currently available</h1>

<% games.forEach((game) => { %>
  <div class="row">
    <div class="col-lg-12">
      <a href="/games/<%= game.id %>"><%= game.createdBy.username %></a>
        <h2>Buy in: Â£<%= game.buyIn %></h2>
        <h2>Number of Players: <%= game.players %></h2>
        <h2>Seats remaining: <%= game.seatsRemaining() %></h2>
        <h2>When: <%= game.date %></h2>
        <section id="location">
          <div class="indexMap" data-id="<%= game.id %>" data-lat=<%= game.latitude %> data-lng=<%= game.longitude %>></div>
        </section>
    </div>
  </div>
<% }) %>
